{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Key": "My_Super_Secret_Key_For_JWT_Authentication",
    "Issuer": "localhost",
    "Audience": "localhost",
    "TokenLifetimeInHours": 1
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=users.db"
  },

  "CaptchaSettings": {
    "SiteKey": "your_site_key",
    "SecretKey": "your_secret_key",
    "VerificationUrl": "https://www.google.com/recaptcha/api/siteverify"
  },
  "LoginSettings": {
    "MaxFailedAttempts": 3,
    "LockoutDurationInMinutes": 15
  },

  "AllowedHosts": "*"
}
